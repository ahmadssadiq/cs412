{
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "functions": {
        "api/wsgi.py": {
            "runtime": "@vercel/python"
        }
    },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/wsgi.py"
        }
    ]
}